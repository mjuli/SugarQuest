<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_perguntas"
    tools:context="com.example.italoberg.jogopergunta.PerguntasActivity">

    <TextView
        android:id="@+id/textViewTitulo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Onde nasceu Alan Turin?"
        style="@android:style/TextAppearance.Large"/>

    <RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <RadioButton
            android:id="@+id/radio_r1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Estados Unidos"
            android:onClick="onRadioButtonClicked"
            style="@android:style/TextAppearance.Medium"/>
        <RadioButton
            android:id="@+id/radio_r2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Alemanhã"
            android:onClick="onRadioButtonClicked"
            style="@android:style/TextAppearance.Medium"/>
        <RadioButton
            android:id="@+id/radio_r3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reino Unido"
            android:onClick="onRadioButtonClicked"
            style="@android:style/TextAppearance.Medium"/>
        <RadioButton
            android:id="@+id/radio_r4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Suíça"
            android:onClick="onRadioButtonClicked"
            style="@android:style/TextAppearance.Medium"/>
    </RadioGroup>

    <Button
        android:id="@+id/buttonResponder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Responder"
        android:layout_gravity="center"
        android:onClick="buttonClickResponder"/>

    <TextView
        android:id="@+id/textViewDebug"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="[ Debug ]"/>


</LinearLayout>
